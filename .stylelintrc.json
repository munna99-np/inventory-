{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "utilities",
          "components",
          "base"
        ]
      }
    ],
    "no-descending-specificity": null,
    "comment-empty-line-before": null
  }
}
